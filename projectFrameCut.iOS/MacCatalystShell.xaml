<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="projectFrameCut.AppShell_MacCatalyst"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:projectFrameCut"
    xmlns:l="clr-namespace:LocalizedResources"
    Title="projectFrameCut"
    FlyoutBehavior="Locked">

    <!-- Sidebar (Flyout) items -->
    <FlyoutItem x:Name="ProjectsTab" Title="{l:Localized Key=AppShell_ProjectsTab}" Route="home">
        <ShellContent
            ContentTemplate="{DataTemplate local:HomePage}"
            Title="{l:Localized Key=AppShell_ProjectsTab}" />
    </FlyoutItem>

    <FlyoutItem x:Name="AssetsTab" Title="{l:Localized Key=AppShell_AssetsTab}" Route="assets">
        <ShellContent
            ContentTemplate="{DataTemplate local:AssetsLibraryPage}"
            Title="{l:Localized Key=AppShell_AssetsTab}" />
    </FlyoutItem>

    <FlyoutItem x:Name="DebugTab" Title="{l:Localized Key=AppShell_DebugTab}" Route="debug">
        <ShellContent
            ContentTemplate="{DataTemplate local:DebuggingMainPage}"
            Title="{l:Localized Key=AppShell_DebugTab}" />
    </FlyoutItem>

    <FlyoutItem x:Name="SettingTab" Title="{l:Localized Key=_Options}" Route="options">
        <ShellContent
            ContentTemplate="{DataTemplate local:MainSettingsPage}"
            Title="{l:Localized Key=_Options}" />
    </FlyoutItem>

</Shell>
