<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="projectFrameCut.DraftPage"
             xmlns:l="clr-namespace:LocalizedResources"
             Title="DraftPage V2">
    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="JobRunningIndicator" Text="{l:Localized Key=DraftPage_NoJobRunning}" Order="Primary" Priority="0" Clicked="OnExportedClick" />
        <ToolbarItem Text="{l:Localized Key=DraftPage_GoRender}" Order="Primary" Priority="0" Clicked="OnExportedClick" />
        <ToolbarItem Text="{l:Localized Key=_Options}" Clicked="SettingsClick"/>
    </ContentPage.ToolbarItems>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>

        
        <VerticalStackLayout Grid.Row="0" x:Name="UpperContent">

                <Button 
        x:Name="AddClip"
        Text="Add clip"
        Clicked="AddClip_Clicked" />
                <StackLayout Orientation="Horizontal" Padding="0,0">
                    <Button x:Name="MoveLeftButton" Text="&lt;-"  Clicked="MoveLeftButton_Clicked"/>
                    <Button x:Name="MoveRightButton" Text="-&gt;"  Clicked="MoveRightButton_Clicked"/>
                    <Button x:Name="ZoomOutButton" Text="+" Clicked="ZoomOutButton_Clicked" />
                    <Button x:Name="ZoomInButton" Text="-" Clicked="ZoomInButton_Clicked"/>
                </StackLayout>
                <StackLayout Orientation="Horizontal" Padding="10,0">
                    <Label Text="View Mode:" VerticalOptions="Center"/>
                    <RadioButton x:Name="NativeViewRadio" Content="Native" IsChecked="True" GroupName="ViewSelector" CheckedChanged="ViewSelector_CheckedChanged"/>
                    <RadioButton x:Name="WebViewRadio" Content="Web" GroupName="ViewSelector" CheckedChanged="ViewSelector_CheckedChanged"/>
                </StackLayout>
                <Button x:Name="FullscreenFlyoutTestButton" Text="Pop a flyout" Clicked="FullscreenFlyoutTestButton_Clicked"/>
            </VerticalStackLayout>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="25"/>
            </Grid.RowDefinitions>
            
            <ScrollView Grid.Row="0" x:Name="NativeView" Orientation="Vertical">
                <Grid x:Name="MainTrackContentGrid">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="8*"/>
                    </Grid.ColumnDefinitions>

                    <VerticalStackLayout x:Name="TrackHeadLayout" Grid.Column="0" Padding="2">
                        <Button Margin="0,8,0,0"
                    x:Name="AddTrackButton"
                    Text="+"
                    Clicked="AddTrackButton_Clicked"
                    HeightRequest="80" />
                    </VerticalStackLayout>



                    <VerticalStackLayout x:Name="TrackContentLayout" Grid.Column="1" Padding="2" />
                </Grid>

            </ScrollView>

            <HybridWebView x:Name="hybridWebView" Grid.Row="0" IsVisible="False" HeightRequest="300" />

            
        </Grid>

        <Grid Grid.Row="2" x:Name="StatusBarGrid" BackgroundColor="#001122" Margin="0,2,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <HorizontalStackLayout Grid.Column="0" >
                <VerticalStackLayout x:Name="StateIndicator"/>
            </HorizontalStackLayout>

            <HorizontalStackLayout Grid.Column="1">
                <Label x:Name="StatusLabel"
                       Margin="3,2,0,0"
    LineBreakMode="NoWrap"
    Text="Everything fine" 
                       />

            </HorizontalStackLayout>

            <HorizontalStackLayout HorizontalOptions="End" Grid.Column="2">
                <Label x:Name="BackendStatus"
Text="" />
                <Ellipse x:Name="BackendStateIndicator" WidthRequest="16" HeightRequest="16" Fill="Gray" Margin="10,1,0,0" />
            </HorizontalStackLayout>

        </Grid>

        <AbsoluteLayout x:Name="OverlayLayer"
                        Grid.RowSpan="3"
                        ZIndex="1000"
                        InputTransparent="True"
                        IsVisible="True"
                        HorizontalOptions="Fill"
                        VerticalOptions="Fill">

            <Label Text="Overlay"
                   TextColor="White"
                   BackgroundColor="#66000000"
                   Padding="6"
                   AbsoluteLayout.LayoutBounds="1,0,AutoSize,AutoSize"
                   AbsoluteLayout.LayoutFlags="PositionProportional" />
        </AbsoluteLayout>
    </Grid>
</ContentPage>