<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="projectFrameCut.Setting.SettingPages.AboutSettingPage"
             xmlns:l="clr-namespace:LocalizedResources"
             Title="{l:Localized Key=MainSettingsPage_Tab_About}">
    <VerticalStackLayout Padding="8">
        <HorizontalStackLayout Padding="8">

            <Image Background="Black" x:Name="AppLogoIcon" WidthRequest="180" HeightRequest="180" Grid.Column="0" Source="appicon.png"/>
            <VerticalStackLayout Grid.Column="1" Padding="8" >
                <Label Grid.Column="1" FontSize="72" Text="{l:Localized Key=AppBrand}"/>
                <Label x:Name="AppVersionLabel" FontSize="32" Margin="0,20,0,0" Text="@Version"/>
            </VerticalStackLayout>
            
        </HorizontalStackLayout>

        <Editor Margin="0,8,0,0" MinimumHeightRequest="500" IsReadOnly="True" x:Name="AboutTextEntry">
            
        </Editor>
    </VerticalStackLayout>
</ContentPage>